{
    "env": {
        "es2021": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
      "semi": [2, "always"],
      "import/no-unresolved": "off",
      "import/extensions": "off",
      "class-methods-use-this": "off",
      "max-len": [2, {"code": 85, "tabWidth": 4, "ignoreUrls": true}],
      "no-restricted-syntax": "off",
      "curly": "off",
      "nonblock-statement-body-position": "off"
    }
}
